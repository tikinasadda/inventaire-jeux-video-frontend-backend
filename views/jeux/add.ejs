<%- include('../partials/header') %>

<div class="container mt-5">
    <h1>Ajouter un nouveau jeu</h1>
    
    <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form action="/jeux/ajouter" method="POST" class="mt-4">
        <div class="mb-3">
            <label class="form-label">Titre du jeu</label>
            <input type="text" class="form-control" name="titre" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Genre</label>
            <input type="text" class="form-control" name="genre" required>
        </div>

        <div class="mb-3">
            <label class="form-label">AnnÃ©e de sortie</label>
            <input type="number" class="form-control" name="annee_sortie" placeholder="Ex: 2024">
        </div>

        <button type="submit" class="btn btn-success">Enregistrer le jeu</button>
        <a href="/jeux" class="btn btn-secondary">Annuler</a>
    </form>
</div>

<%- include('../partials/footer') %>